<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Hamit.BookList"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             Title="BookJunction"
             >
        
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="16" >
            <Label Text="Welcome to BookJunction" FontSize="21" HorizontalTextAlignment="Center"/>
            <Label x:Name="user" FontSize="18"/>

            <Frame HorizontalOptions="Center" VerticalOptions="Center" >

                <CollectionView x:Name="collectionView">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="5">
                                <Label Text="{Binding Author}" FontSize="Small"/>
                                <Label Text="{Binding Title}" FontSize="Medium"/>
                                <Label Text="{Binding Id}" FontSize="Small" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>